{
  "dependencies": {
    "@tailwindcss/cli": "^4.1.5",
    "tailwindcss": "^4.1.5"
  },
  "scripts": {
    "watch": "mkdir -p ./src && [ -f ./src/output.css ] || touch ./src/output.css && tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "build": "mkdir -p ./src && [ -f ./src/output.css ] || touch ./src/output.css && tailwindcss -i ./src/input.css -o ./src/output.css --minify"
  }
}
